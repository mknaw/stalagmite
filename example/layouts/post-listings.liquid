<div>
    <ul>
        {% for entry in meta.entries %}
            <li class="bg-green-500">
                <a href="{{ entry.link }}">
                    {{ entry.title }}
                </a>
                <div>
                    {% assign first_p = entry|first_block_of_kind:"p" %}
                    {% render_block first_p %}
                </div>
            </li>
        {% endfor %}
    </ul>
</div>
{% if meta.prev_page_link %}
    <div>
        <a href="{{ meta.prev_page_link }}">
            previous
        </a>
    </div>
{% endif %}
{% if meta.next_page_link %}
    <div>
        <a href="{{ meta.next_page_link }}">
            next
        </a>
    </div>
{% endif %}
