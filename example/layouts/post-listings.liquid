<html>
    <head>
        <title>TODO</title>
        {% tailwind %}
    </head>
    <body>
        <main>
            <div>
                <ul>
                    {% for entry in entries %}
                        <li class="bg-green-500">
                            <a href="{{ entry.link }}">
                                {{ entry.title }}
                            </a>
                            <div>
                                {% assign first_p = entry|first_block_of_kind:"p" %}
                                {% render_block first_p %}
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            {% if prev_page_link %}
                <div>
                    <a href="{{ prev_page_link }}">
                        previous
                    </a>
                </div>
            {% endif %}
            {% if next_page_link %}
                <div>
                    <a href="{{ next_page_link }}">
                        next
                    </a>
                </div>
            {% endif %}
        </main>
    </body>
</html>
